{
  "name": "marketplace_api",
  "version": "1.0.0",
  "description": "api for all the marketplace",
  "main": "main.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "database": "docker-compose -f docker-compose.yml up",
    "database:clear": "docker-compose down -v",
    "database:init": "npm run migration:run && npm run seeds",
    "lint": "tslint -p tsconfig.json",
    "lint:fix": "npm run lint -- --fix",
    "migration:create": "./node_modules/.bin/ts-node ./node_modules/typeorm/cli.js migration:create -n",
    "migration:generate": "./node_modules/.bin/ts-node ./node_modules/typeorm/cli.js migration:generate",
    "premigration:run": "npm run schema:generate",
    "migration:run": "ts-node -r dotenv/config -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run",
    "schema:generate": "ts-node -r dotenv/config -r tsconfig-paths/register scripts/generate-schema",
    "preseeds": "npm run migration:run && rm -rf ./generated",
    "seeds": "./node_modules/.bin/ts-node ./node_modules/typeorm-seeding/dist/cli.js seed",
    "setup:dev": "cp ./config/local.js.sample ./config/local.js",
    "prestart": "npm run build",
    "start": "node -r dotenv/config dist/main.js",
    "start:prod": "npm run migration:run && node -r dotenv/config dist/main.js",
    "dev": "./node_modules/.bin/ts-node-dev -r dotenv/config --respawn src/main",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:watch": "jest --watch",
    "typings:generate": "./node_modules/.bin/ts-node scripts/generate-typings",
    "upgrade-interactive": "npx npm-check --update",
    "postupgrade-interactive": "npm test",
    "heroku-postbuild": "npm run build && npm run migration:run"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^7.17.0",
    "@hapi/joi": "^17.1.1",
    "@lokalise/node-api": "^7.1.1",
    "@nestjs/common": "^8.4.0",
    "@nestjs/core": "^8.4.0",
    "@nestjs/elasticsearch": "^8.0.1",
    "@nestjs/microservices": "^8.4.0",
    "@nestjs/platform-express": "^8.4.0",
    "@nestjs/swagger": "^5.2.0",
    "@nestjs/typeorm": "^8.0.3",
    "cache-manager": "^3.6.0",
    "class-transformer": "0.5.1",
    "class-validator": "^0.13.2",
    "cli-color": "^2.0.1",
    "dotenv": "^16.0.0",
    "jsonwebtoken": "^8.5.1",
    "locale-enum": "^1.0.9",
    "lodash": "^4.17.21",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.27",
    "nest-router": "1.0.9",
    "node-fetch": "^3.2.1",
    "reflect-metadata": "0.1.13",
    "rxjs": "^7.5.4",
    "swagger-ui-express": "^4.3.0",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.13.0",
    "typeorm": "^0.2.45",
    "typescript": "^4.6.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.2.2",
    "@nestjs/testing": "^8.4.0",
    "@types/dotenv": "^8.2.0",
    "@types/faker": "^6.6.9",
    "@types/hapi__joi": "^17.1.8",
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.179",
    "@types/moment": "^2.13.0",
    "@types/moment-timezone": "^0.5.30",
    "@types/node": "^17.0.21",
    "@types/node-fetch": "^2.6.1",
    "@types/request": "^2.48.8",
    "@types/request-promise": "^4.1.48",
    "@types/uuid": "^8.3.4",
    "faker": "^6.6.6",
    "husky": "^7.0.4",
    "invariant": "^2.2.4",
    "jest": "^27.5.1",
    "jest-date-mock": "^1.0.8",
    "lint-staged": "^12.3.5",
    "prettier": "^2.5.1",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-node-dev": "^1.1.8",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typeorm-seeding": "^1.6.1",
    "uuid": "^8.3.2"
  },
  "lint-staged": {
    "src/**/*.{js,json}": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.ts": [
      "tslint --project tsconfig.json",
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "setupFiles": [
      "jest-date-mock"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "author": "Keyko",
  "license": "ISC"
}
