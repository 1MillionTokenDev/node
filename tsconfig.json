{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "noImplicitAny": false,
      "removeComments": true,
      "noLib": false,
      "allowSyntheticDefaultImports": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es2020",
      "sourceMap": true,
      "outDir": "./dist/src",
      "rootDir": "src",
      "baseUrl": "./",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "composite": true
    },
    "exclude": ["node_modules"]
}
